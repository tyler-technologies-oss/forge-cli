{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2015", "dom", "es2017"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
    "paths": {
      "<%= data.fullPackageName %>": ["src/lib"],
      "<%= data.fullPackageName %>/*": ["src/lib/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}